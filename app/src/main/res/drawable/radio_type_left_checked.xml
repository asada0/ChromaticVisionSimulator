<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <corners android:topLeftRadius="5dp" android:bottomLeftRadius="5dp" />
            <solid android:color="@color/RadioBack" />
        </shape>
    </item>

    <item android:bottom="5dp">
        <shape android:shape="rectangle" >
            <corners android:topLeftRadius="5dp" android:bottomLeftRadius="5dp" />
            <gradient
                android:angle="270"
                android:startColor="@color/RadioBackGs"
                android:endColor="@color/RadioBackGe"
                android:centerColor="@color/RadioBackGc"
                android:centerY="0.1" />
        </shape>
    </item>

    <item android:top="5dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="5dp" android:bottomLeftRadius="5dp" />
            <gradient
                android:angle="90"
                android:startColor="@color/RadioBackGs"
                android:endColor="@color/RadioBackGe"
                android:centerColor="@color/RadioBackGc"
                android:centerY="0.1" />
        </shape>
    </item>

    <item android:top="4dp" android:left="3dp" android:bottom="4dp" android:right="2dp">
        <shape>
            <corners android:radius="4dp" />
            <gradient
                android:angle="315"
                android:startColor="@color/RadioPushedGe"
                android:endColor="@color/RadioPushed" />
        </shape>
    </item>

    <item android:top="6dp" android:left="4dp" android:bottom="4dp" android:right="2dp">
        <shape android:shape="rectangle" >
            <corners android:radius="4dp" />
            <solid android:color="@color/RadioPushed" />
        </shape>
    </item>
</layer-list>