<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/RadioBack" />
        </shape>
    </item>

    <item android:bottom="5dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:startColor="@color/RadioBackGs"
                android:endColor="@color/RadioBackGe"
                android:centerColor="@color/RadioBackGc"
                android:centerY="0.1" />
        </shape>
    </item>

    <item android:top="5dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:startColor="@color/RadioBackGs"
                android:endColor="@color/RadioBackGe"
                android:centerColor="@color/RadioBackGc"
                android:centerY="0.1" />
        </shape>
    </item>
</layer-list>